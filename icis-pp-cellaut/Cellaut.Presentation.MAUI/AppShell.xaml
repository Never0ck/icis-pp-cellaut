<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Cellaut.Presentation.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Cellaut.Presentation.MAUI"
    xmlns:views="clr-namespace:Cellaut.Presentation.MAUI.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Поле клеточного автомата"
            ContentTemplate="{DataTemplate views:CelluatFieldPage}"
            Route="CellautFieldPage" />

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </TabBar>
</Shell>
